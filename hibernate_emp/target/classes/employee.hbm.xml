<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="org.emp.same.Employee" table ="hiemployees">
   <id name ="id" column ="id">
      <generator class = "identity"/>
  </id>
  <property name ="name" column ="name" not-null="true"/>
  <property name ="phone" column ="phone" unique="true" not-null="true"/>
  <property name ="email" column ="email" unique="true" not-null="true"/>
  <property name ="designation" column ="designation" not-null="true"/>
  <property name ="salary" column ="salary" not-null="true"/>
  <property name ="password" column ="password" not-null="true"/>
  
   
  
  </class>
</hibernate-mapping>